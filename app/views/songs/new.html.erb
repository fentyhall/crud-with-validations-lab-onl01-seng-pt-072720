<h3>New Song Form</h3>

<%= form_for @song do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "song_title" %>

    <%= f.label :release_year %>
    <%= f.text_field :release_year, class: "song_release_year" %>
    
    <%= f.label :released %>
    <%= f.check_box :released, class: "song_released" %>

    <%= f.label :genre %>
    <%= f.text_field :genre, class: "song_genre" %>

    <%= f.label :artist_name %>
    <%= f.text_field :artist_name, class: "song_artist_name" %>

    <%- f.submit %>
<% end %>