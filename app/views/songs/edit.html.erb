<h3>Edit Song Form</h3>

<%= form_for @song do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "song_title" %><br>

    <%= f.label :release_year %>
    <%= f.text_field :release_year, class: "song_release_year" %><br>
    
    <%= f.label :released %>
    <%= f.check_box :released, class: "song_released" %><br>

    <%= f.label :genre %>
    <%= f.text_field :genre, class: "song_genre" %><br>

    <%= f.label :artist_name %>
    <%= f.text_field :artist_name, class: "song_artist_name" %><br>

    <%= f.submit %>
<% end %>